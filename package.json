{
  "name": "spartan-ui",
  "description": "React component library that focusses on getting the basics right leaving the design up to you",
  "version": "0.2.0",
  "repository": "github:emortlock/spartan-ui",
  "homepage": "https://emortlock.github.io/spartan-ui/",
  "author": "Edward Mortlock <edward@mortlock.dev>",
  "main": "dist/index.js",
  "module": "dist/spartan-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "ci:test": "npm run lint && npm run test:coverage",
    "build:watch": "tsdx watch",
    "build": "rimraf dist && tsdx build",
    "docs": "styleguidist build",
    "lint": "eslint src/** -c eslint.config.js --ext ts,tsx",
    "release": "standard-version -m \"chore: v%s release [skip-ci]\" ",
    "start": "styleguidist server",
    "test:coverage": "tsdx test --env=jsdom --coverage",
    "test": "tsdx test --env=jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "react-focus-lock": "^2.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react": "^8.0.9",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.1.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^2.7.0",
    "jest-dom": "^3.5.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "react": "^16.12.0",
    "react-docgen-typescript": "^1.16.2",
    "react-dom": "^16.12.0",
    "react-styleguidist": "^9.2.0",
    "rimraf": "^2.7.1",
    "standard-version": "^6.0.1",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.12.3",
    "tslib": "^1.9.3",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/build/setupTests.ts"
    ]
  },
  "keywords": [
    "react",
    "react-components",
    "accessible",
    "semantic",
    "no-ui"
  ],
  "bugs": "https://github.com/emortlock/spartan-ui/issues",
  "license": "MIT"
}
